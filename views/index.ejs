<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Online Bookstore</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      padding-top: 50px;
      background-color: #433D8B;
      color: #000000; /* Text color */
      font-family: system-ui;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0.9); /* Light background with transparency */
      border-radius: 8px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.2); /* Soft shadow effect */
    }

    #login-form {
      text-align: center;
      margin-bottom: 30px;
    }

    #login-form h2 {
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .admin-login {
      margin-top: 20px;
    }

    #book-display, #shopping-cart {
      margin-top: 30px;
      text-align: center;
    }

    .btn-primary, .btn-secondary, .btn-info {
      padding: 10px 20px;
      font-size: 16px;
    }

    .btn-primary {
      background-color: #6C63FF;
      border-color: #6C63FF;
    }

    .btn-primary:hover {
      background-color: #433D8B;
      border-color: #433D8B;
    }

    .btn-secondary {
      background-color: #17A2B8;
      border-color: #17A2B8;
    }

    .btn-secondary:hover {
      background-color: #117A8B;
      border-color: #117A8B;
    }

    .btn-info {
      background-color: #20C997;
      border-color: #20C997;
    }

    .btn-info:hover {
      background-color: #1A936F;
      border-color: #1A936F;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Login Form -->
    <div id="login-form">
      <h2>Login</h2>
      <form action="/submit" class="form" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="usernamess" id="username" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a href="/register" class="btn btn-secondary">Register</a> <!-- Link to Registration Page -->
      </form>
      <div class="admin-login">
        <form action="/admin-login" class="form" method="get">
          <button type="submit" class="btn btn-info">Admin Login</button>
        </form>
      </div>
    </div>

    <!-- Book Display Section -->
    <div id="book-display" style="display: none;">
      <h2>Books</h2>
      <input type="text" class="form-control mb-3" id="search-bar" placeholder="Search for books...">
      <div id="book-list" class="row">
        <!-- Book items will be dynamically added here -->
      </div>
    </div>

    <!-- Shopping Cart Section -->
    <div id="shopping-cart" style="display: none;">
      <h2>Shopping Cart</h2>
      <ul id="cart-items" class="list-group mb-3">
        <!-- Cart items will be dynamically added here -->
      </ul>
      <div id="cart-total" class="text-right"></div>
      <button type="button" class="btn btn-primary" onclick="checkout()">Checkout</button>
    </div>
    
  </div>
</body>
</html>
