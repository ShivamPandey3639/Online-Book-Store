<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>BOOKSTORE</title>
<style>
    body {
        font-family: system-ui;
        margin: 0;
        padding: 0;
        background-color: #C8ACD6; /* Light purple background */
    }
    header {
        background-color: #3F3D56; /* Dark purple header */
        color: #fff; /* White text */
        padding: 20px;
        text-align: center;
    }
    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff; /* White container background */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
        display: flex;
        flex-wrap: wrap; /* Allow items to wrap */
        justify-content: space-between; /* Distribute items evenly */
        align-items: center; /* Center items vertically */
    }
    input[type="text"], input[type="number"] {
        width: calc(100% - 100px); /* Adjust input width */
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc; /* Light border */
        border-radius: 5px;
        font-size: 16px;
    }
    input[type="text"]:focus, input[type="number"]:focus {
        outline: none; /* Remove outline on focus */
        border-color: #6C63FF; /* Change border color on focus */
    }
    button[type="submit"] {
        background-color: #6C63FF; /* Purple button background */
        color: #fff; /* White text */
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }
    button[type="submit"]:hover {
        background-color: #433D8B; /* Darker purple on hover */
    }
    .book {
        border: 1px solid #ddd; /* Light border */
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #f9f9f9; /* Light gray background */
        width: 100%; /* Ensure books take full width */
    }
    .book-details {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .book img {
        max-width: 100px;
        height: auto;
        border-radius: 5px;
    }
    .book h2 {
        margin-top: 0;
        margin-bottom: 5px;
        color: #333; /* Dark text */
    }
    .book p {
        margin: 0;
        color: #666; /* Gray text */
    }
    .add-to-cart {
        background-color: #4CAF50; /* Green button */
        color: #fff;
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .add-to-cart:hover {
        background-color: #45a049; /* Darker green on hover */
    }
    .checkout-container {
        margin-top: 10px;
        text-align: right; /* Align buttons to the right */
        width: 100%; /* Ensure full width */
    }
    .checkout-button {
        background-color: #85d916; /* Light green */
        color: #333;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .checkout-button:hover {
        background-color: #a79b9b; /* Darker gray on hover */
    }
</style>
</head>
<body>
    <header>
        <h1>Bookstore</h1>
    </header>
    <div class="container">
        <form action="/search" method="post">
            <input type="text" id="search" name="query" placeholder="Search for books...">
            <button type="submit">Search</button>
        </form>
        <div class="checkout-container">
            <form action="/checkout" method="post" class="checkout-form">
                <button type="submit" class="checkout-button">Go To Cart</button>
            </form>
        </div>
        
        <% books.forEach((row, i) => { %>
            <% row.forEach((element, j) => { %>
                <div class="book">    
                    <div class="book-details">
                        <div>
                            <h2><%= element.Book_name %></h2>
                            <p>Author: <%= element.Author %></p>
                            <p>Price: $<%= element.Price %></p>
                        </div>
                        <form action="/add-to-cart" method="post">
                            <!-- Hidden input to store book ID -->
                            <input type="hidden" name="bookid" value="<%= element.Book_Id %>">
                            <!-- Quantity input -->
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" value="1" min="1">
                            <!-- Add to Cart button -->
                            <button type="submit" class="add-to-cart">Add to Cart</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        <% }); %>
        
    </div>
</body>
</html>
